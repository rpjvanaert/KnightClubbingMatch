<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="knight.clubbing.controller.LiveMatchViewController" spacing="15" style="-fx-padding: 20;">
    <Label text="Live Match View" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <HBox spacing="20">
        <VBox spacing="5">
            <Label text="Engine A:" style="-fx-font-weight: bold;"/>
            <Label fx:id="engineALabel" text="Stockfish v15.1"/>
        </VBox>
        <Label text="vs" style="-fx-font-size: 18px;"/>
        <VBox spacing="5">
            <Label text="Engine B:" style="-fx-font-weight: bold;"/>
            <Label fx:id="engineBLabel" text="Leela v0.28"/>
        </VBox>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <ProgressBar fx:id="progressBar" prefWidth="200"/>
        <Label fx:id="progressLabel" text="3/10 games"/>
    </HBox>
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Elapsed:"/>
        <Label fx:id="elapsedLabel" text="00:12:34"/>
    </HBox>
    <Button text="Spectate" onAction="#onSpecateClicked"/>
    <Label text="Completed Games:" style="-fx-font-weight: bold;"/>
    <TableView fx:id="gamesTable" prefHeight="200">
        <TableColumn text="Game #" prefWidth="60"/>
        <TableColumn text="Result" prefWidth="60"/>
        <TableColumn text="Duration" prefWidth="100"/>
    </TableView>
    <Button text="Continue" onAction="#onContinueClicked" />
</VBox>